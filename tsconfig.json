{
  "compilerOptions": {
    // Language features and compatibility
    "target": "ES2015",

    // Module system used in the output, CommonJS for Node.js compatibility
    "module": "CommonJS",

    // Strictness and type checking
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Disallow 'any' type unless explicitly specified
    "allowUnusedLabels": false, // Prevent unused labels in code
    "noFallthroughCasesInSwitch": true, // Prevent missing 'break' statements in switch cases
    "skipLibCheck": true, // Skip type checking of .d.ts files for faster builds

    // Module resolution and imports
    "moduleResolution": "node", // Use Node.js style module resolution
    "baseUrl": ".", // Base directory for resolving non-relative module names
    "allowJs": true, // Allow JavaScript files to be compiled
    "resolveJsonModule": true, // Allow JSON files to be imported
    "esModuleInterop": true, // Enable compatibility for CommonJS and ES modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default exports

    // Decorators and metadata
    "experimentalDecorators": true, // Enable experimental decorators
    "emitDecoratorMetadata": true, // Emit metadata for decorated code

    // Build and output
    "incremental": true, // Enable incremental builds
    "importHelpers": true, // Use imported helpers instead of inlining
    "outDir": "dist", // Specify output directory for compiled files
    "sourceMap": true, // Generate source maps for debugging

    // Additional TypeScript options
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true
  },

  // Include all files in the 'src' directory
  "include": ["src/**/*"],

  // Directories to exclude from compilation
  "exclude": ["node_modules", "dist"]
}
